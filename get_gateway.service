[Unit]
Description=Gateway Checker Script
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
#User=systemd-user  # Replace with your username
ExecStart=/usr/bin/python3 /home/lab-user/scripts/sase-traffic-generators/get_gateway.py /home/lab-user/scripts/sase-traffic-generators/valid_gateway.txt
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
